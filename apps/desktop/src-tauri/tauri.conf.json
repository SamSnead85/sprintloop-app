{
    "bundle": {
        "active": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "targets": "all",
        "macOS": {
            "minimumSystemVersion": "12.0"
        },
        "windows": {
            "webviewInstallMode": {
                "type": "downloadBootstrapper"
            }
        }
    },
    "productName": "SprintLoop",
    "version": "0.1.0",
    "identifier": "com.sprintloop.ide",
    "build": {
        "beforeDevCommand": "cd ../web && npm run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "cd ../web && npm run build",
        "frontendDist": "../../web/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "SprintLoop",
                "width": 1400,
                "height": 900,
                "minWidth": 1000,
                "minHeight": 700,
                "center": true,
                "resizable": true,
                "decorations": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}